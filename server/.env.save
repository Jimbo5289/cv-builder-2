OPENAI_API_KEY="your_openai_api_key"

# Frontend URL
FRONTEND_URL="http://localhost:5175"

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cvbuilder?schema=public"

