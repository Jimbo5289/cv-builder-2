# Server Environment Variables
NODE_ENV=development
PORT=3005

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cv_builder
DIRECT_DATABASE_URL=postgresql://postgres:password@localhost:5432/cv_builder

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRY=7d

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=support@cvbuilder.com

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# OpenAI API (for CV analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=cv-builder-server

# Feature Flags
SKIP_AUTH_CHECK=true
MOCK_SUBSCRIPTION_DATA=true

# Security
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-production-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Two-Factor Authentication
TOTP_ISSUER=CVBuilder 